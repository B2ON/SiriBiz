@if (ViewContext.ActionDescriptor.DisplayName != "/SignIn")
{
    <footer class="cs-footer jarallax bg-dark pt-5 pt-md-6 pt-lg-7" data-jarallax="" data-speed="0.3">

        <div class="container pt-3 pt-md-0">
            <div class="row pb-2">
                <form class="col-xl-6 col-lg-7 col-md-7 needs-validation mb-5" novalidate="">
                    <h2 class="text-light pb-4">What project are you looking for?</h2>
                    <h3 class="h6 pb-2 text-light">Services</h3>
                    <div class="btn-group-toggle pb-3 mb-3" data-toggle="buttons">
                        <label class="btn btn-outline-light mr-2 mb-2 active">
                            <input type="radio" name="services" value="e-commerce" checked="">E-Commerce
                        </label>
                        <label class="btn btn-outline-light mr-2 mb-2">
                            <input type="radio" name="services" value="desktop">Desktop App
                        </label>
                        <label class="btn btn-outline-light mr-2 mb-2">
                            <input type="radio" name="services" value="web">Web App
                        </label>
                        <label class="btn btn-outline-light mb-2">
                            <input type="radio" name="services" value="mobile">Mobile App
                        </label>
                    </div>
                    <div class="input-group-overlay form-group">
                        <div class="input-group-prepend-overlay"><span class="input-group-text"><i class="siribiz-user"></i></span></div>
                        <input class="form-control prepended-form-control" type="text" placeholder="Name" required="">
                    </div>
                    <div class="input-group-overlay form-group">
                        <div class="input-group-prepend-overlay"><span class="input-group-text"><i class="siribiz-mail"></i></span></div>
                        <input class="form-control prepended-form-control" type="email" placeholder="Email" required="">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="4" placeholder="Project description" required=""></textarea>
                    </div>
                    <div class="row pt-2">
                        <div class="col-lg-6 col-md-8">
                            <button class="btn btn-primary btn-block" type="submit">Send Request</button>
                        </div>
                    </div>
                </form>
                <div class="col-xl-3 col-lg-4 offset-xl-3 offset-lg-1 col-md-5 mb-5">
                    <h2 class="text-light pb-2">Contacts</h2>
                    <ul class="list-unstyled font-size-sm mb-4 pb-2">
                        <li><a class="nav-link-style nav-link-light" href="mailto:contact@example.com">contact@siri-biz.com</a></li>
                        @*<li><a class="nav-link-style nav-link-light" href="tel:08">+ 1 526 220 0459</a></li>*@
                    </ul>
                    <h3 class="h6 pb-2 text-light">Or connect with us on:</h3>
                    <a class="social-btn sb-facebook sb-light sb-lg mr-2 mb-2" href="#"><i class="siribiz-facebook"></i></a>
                    <a class="social-btn sb-twitter sb-light sb-lg mr-2 mb-2" href="#"><i class="siribiz-twitter"></i></a>
                    <a class="social-btn sb-instagram sb-light sb-lg mr-2 mb-2" href="#"><i class="siribiz-instagram"></i></a>
                </div>
            </div>
            <p class="font-size-sm text-center pb-2 mb-4"><span class="text-light opacity-50 mr-1">© All rights reserved. Made by</span><a class="nav-link-style nav-link-light" href="https://siri-biz.com/" target="_blank" rel="noopener">Siri-Biz.Com</a></p>
        </div>
        <div style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; pointer-events: none; z-index: -100;"><div class="jarallax-img" style="background-image: url(../images/cubes-bg.jpg);" data-jarallax-original-styles="background-image: url(../images/cubes-bg.jpg);"></div></div>
    </footer>
}
else
{
    <footer class="cs-footer py-4">
        <div class="container font-size-sm mb-0 py-3"><span class="text-muted mr-1">© All rights reserved. Made by</span><a class="nav-link-style" href="https://siri-biz.com/" target="_blank" rel="noopener">Siri-Biz.Com</a></div>
    </footer>
}

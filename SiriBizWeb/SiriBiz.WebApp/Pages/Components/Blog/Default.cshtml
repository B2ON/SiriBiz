@model List<SiriBiz.Core.Models.MenuItem>
@if (Model.Count > 0)
{
    <li class="nav-item dropdown dropdown-mega">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Blog</a>
        <div class="dropdown-menu">
            @foreach (var group in Model.Select(s => s.Group).Distinct())
            {
                <div class="dropdown-column mb-2 mb-lg-0">
                    <h5 class="dropdown-header">@group</h5>
                    @foreach (var subMenu in Model.Where(w => w.Group.Equals(group)))
                    {
                        <a class="dropdown-item" href="@subMenu.Url">@subMenu.Title</a>
                    }
                </div>
            }
        </div>
    </li>
}

